<h2>スケジュール新規作成</h2>


<% if flash.notice %>
　　<div class="alert">
    　<p class="alert__error"><%= flash.notice %></p>
    </div>
<% end %>


<%= form_with model:@user do |f| %>
    <table>
       <tr>
          <th><%= f.label :title ,"タイトル" %></th>
          <td><%= f.text_field :title %></td>
       </tr>
       <tr>
          <th><%= f.label :startday ,"開始日" %></th>
          <td><%= f.date_field :startday %></td>
       </tr>
       <tr>
          <th><%= f.label :endday ,"終了日" %></th>
          <td><%= f.date_field :endtime %></td>
       </tr>
       <tr>
          <th><%= f.label :allday ,"終日" %></th>
          <td>
             <%= f.check_box :allday %>
             <p>終日の場合はチェックを入れます</p>
          </td>
       </tr>
       <tr>
          <th><%= f.label :memo ,"スケジュールメモ" %></th>
          <td><%= f.text_area :memo %></td>
       </tr>
    </table>
    <div>
       <ul>
          <li><%= f.submit "登録完了する" %></li>
          <li><%= link_to "ユーザー情報一覧に戻る" ,:users %></li>
       </ul>
    </div>

<% end %>